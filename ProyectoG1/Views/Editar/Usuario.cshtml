@model ProyectoG1.Models.ViewModel.UsuarioViewModel
@{
    ViewBag.Title = "Actualizar Usuario";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FAVICON-->
    <link rel="icon" type="image/png" href="~/Imagenes/FavIcon.png">
    <!--ESTILOS-->
    <link rel="stylesheet" type="text/css" href="~/Content/base.css">
    <link rel="stylesheet" type="text/css" href="~/Content/permisos.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    @{
        var nombreuser = Session["nombre"];
        var apellidouser = Session["apellido"];
        var tipouser = Session["tipo"];
        var iduser = Session["id"];

    }

    <!-- Contenido -->
    <section id="contenedor">

        <h3 class="text_usuario">Actualizar usuario</h3>

        <div class="contenedor">
            <div class="sub_contenedor">
                @using (Html.BeginForm("Usuario", "Editar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form>
                        <h6>Actualizar</h6>
                        <div class="contenedor">
                            <div class="contenedor_left">
                                @Html.HiddenFor(d => d.idUsuario)
                            </div>
                            <div class="contenedor_left">
                                @Html.LabelFor(d => d.nombreUsuario)
                                @Html.TextBoxFor(d => d.nombreUsuario, "", new { @class = "input-text", @placeholder = "Cambiar Nombre" })
                                @Html.ValidationMessageFor(d => d.nombreUsuario, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_left">
                                @Html.LabelFor(d => d.apellidoUsuario)
                                @Html.TextBoxFor(d => d.apellidoUsuario, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.apellidoUsuario, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_left">
                                @Html.LabelFor(d => d.claveUsuario)
                                @Html.TextBoxFor(d => d.claveUsuario, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.claveUsuario, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_left">
                                @Html.LabelFor(d => d.cedulaUsuario)
                                @Html.TextBoxFor(d => d.cedulaUsuario, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.cedulaUsuario, null, new { @class = "validacion" })
                            </div>
                        </div>
                        <div>
                            <div class="contenedor_right">
                                @Html.LabelFor(d => d.telefonoUsuario)
                                @Html.TextBoxFor(d => d.telefonoUsuario, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.telefonoUsuario, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_right">
                                @Html.LabelFor(d => d.correoUsuario)
                                @Html.TextBoxFor(d => d.correoUsuario, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.correoUsuario, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_right">
                                @Html.LabelFor(d => d.idTipo)
                                @Html.TextBoxFor(d => d.idTipo, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.idTipo, null, new { @class = "validacion" })
                            </div>
                            <div class="contenedor_right">
                                @Html.LabelFor(d => d.idEstado)
                                @Html.TextBoxFor(d => d.idEstado, "", new { @class = "input-text", @placeholder = "Cambiar permiso" })
                                @Html.ValidationMessageFor(d => d.idEstado, null, new { @class = "validacion" })
                            </div>
                        </div>

                        <div class="contenedor_botones">
                            <button type="submit" class="btn_format btn_enviar contenedor_interior_left" onclick="return ConfirmPermiso()">Actualizar</button>
                            <a class="btn_format btn_cancelar contenedor_interior_right" href="@Url.Action("Usuarios", "Admin")">Cancelar</a>
                        </div>
                        
                    </form>
                }
            </div>

        </div>

    </section>

</body>
</html>

<script src="~/Scripts/configuraciones.js"></script>

<!--Ion Icons-->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
