@model List<ProyectoG1.Models.ViewModel.ListaPermisosViewModel>
@{
    ViewBag.Title = "Configuraciones";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FAVICON-->
    <link rel="icon" type="image/png" href="~/Imagenes/FavIcon.png">
    <!--ESTILOS-->
    <link rel="stylesheet" type="text/css" href="~/Content/base.css">
    <link rel="stylesheet" type="text/css" href="~/Content/configuraciones.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    @{
        var nombreuser = Session["nombre"];
        var apellidouser = Session["apellido"];
        var tipouser = Session["tipo"];
        var iduser = Session["id"];


    }
    <!-- Contenido -->
    <section id="contenedor">
        <h3 class="text_usuario">Configuraciones</h3>
        <div>
            <div class="interno">
                @if (tipouser.Equals(3))
                {

                    <div align="center" class="contenedor_btn_agregar">
                        <a class="btn_format btn_agregar" href="@Url.Action("Permisos", "Admin")">Permisos</a>
                        <a class="btn_format btn_agregar" href="@Url.Action("Estados", "Admin")">Estados</a>
                    </div>

                }
                else
                {
                    <div>
                        <h1>No hay configuraciones!</h1>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>

<script src="~/Scripts/configuraciones.js"></script>

