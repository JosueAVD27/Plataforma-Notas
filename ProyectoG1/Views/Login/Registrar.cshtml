@model ProyectoG1.Models.ViewModel.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{
    ViewBag.Title = "Registrar";
}


<link rel="stylesheet" type="text/css" href="~/Content/Login.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="contenedor_general">
    @using (Html.BeginForm("Registrar", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="contenedor-general2">
            <form>
                <h1 class="texto">Regístrate</h1>
                <div class="contenedor_registro_general">
                    <div>
                        <div class="input_registro1">
                            <div>
                                @Html.TextBoxFor(d => d.username, "", new { @class = "input input_izquierda", @placeholder = "Usuario" }) <br />
                                @Html.ValidationMessageFor(d => d.username, null, new { @class = "validacion" })
                            </div>
                            <div>
                                @Html.TextBoxFor(d => d.claveUsuario, "", new { @class = "input input_derecha", @placeholder = "Contraseña" }) <br />
                                @Html.ValidationMessageFor(d => d.claveUsuario, null, new { @class = "validacion" })
                            </div>
                        </div>
                        <div class="input_registro2">
                            <div>
                                @Html.TextBoxFor(d => d.nombreUsuario, "", new { @class = "input input_izquierda", @placeholder = "Nombre" }) <br />
                                @Html.ValidationMessageFor(d => d.nombreUsuario, null, new { @class = "validacion" })
                            </div>
                            <div>
                                @Html.TextBoxFor(d => d.apellidoUsuario, "", new { @class = "input input_derecha", @placeholder = "Apellido" }) <br />
                                @Html.ValidationMessageFor(d => d.apellidoUsuario, null, new { @class = "validacion" })
                            </div>
                        </div>
                        <div class="input_registro3">
                            <div>
                                @Html.TextBoxFor(d => d.cedulaUsuario, "", new { @class = "input input_izquierda", @placeholder = "Cédula" }) <br />
                                @Html.ValidationMessageFor(d => d.cedulaUsuario, null, new { @class = "validacion" })
                            </div>
                            <div>
                                @Html.TextBoxFor(d => d.telefonoUsuario, "", new { @class = "input input_derecha", @placeholder = "Teléfono" }) <br />
                                @Html.ValidationMessageFor(d => d.telefonoUsuario, null, new { @class = "validacion" })
                            </div>
                        </div>
                    </div>
                    <div>
                        @Html.TextBoxFor(d => d.correoUsuario, "", new { @class = "input ", @placeholder = "Correo Electrónico" }) <br />
                        @Html.ValidationMessageFor(d => d.correoUsuario, null, new { @class = "validacion" })
                    </div>
                </div>
                <input type="submit" class="btn" value="Registrar" />
            </form>
        </div>


    }
    <div class="contenedor2">
        <div class="">
            <div class="overlay-panel overlay-right">
                <h1>Ya tienes cuenta?</h1>
                <p>Comienza tu viaje con nosotros</p>
                <a class="btn btn2" href="Index">Iniciar Sesión</a>
            </div>
        </div>
    </div>
</div>
