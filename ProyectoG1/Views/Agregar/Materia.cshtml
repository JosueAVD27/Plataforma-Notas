@model ProyectoG1.Models.ViewModel.MateriasViewModel
@{
    ViewBag.Title = "Agregar Materia";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FAVICON-->
    <link rel="icon" type="image/png" href="~/Imagenes/FavIcon.png">
    <!--ESTILOS-->
    <link rel="stylesheet" type="text/css" href="~/Content/base.css">
    <link rel="stylesheet" type="text/css" href="~/Content/permisos.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    @{
        var nombreuser = Session["nombre"];
        var apellidouser = Session["apellido"];
        var tipouser = Session["tipo"];
        var iduser = Session["id"];


    }

    <!-- Contenido -->
    <section id="contenedor">

        <h3 class="text_usuario">Agregar nueva materia</h3>

        <div class="contenedor">
            
            <div class="sub_contenedor">
                @using (Html.BeginForm("Materia", "Agregar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
         
                    <form>
                        <div class="contenedor_form">
                            <div class="contenedor_interior">
                                <div class="contenedor_interior_left">
                                    @Html.LabelFor(d => d.nrc)
                                    @Html.TextBoxFor(d => d.nrc, "", new { @class = "input-text", @placeholder = "Ingrese el NRC" })
                                    @Html.ValidationMessageFor(d => d.nrc, null, new { @class = "validacion" })
                                </div>
                                <div class="contenedor_interior_right">
                                    @Html.LabelFor(d => d.nombreMateria)
                                    @Html.TextBoxFor(d => d.nombreMateria, "", new { @class = "input-text", @placeholder = "Nombre materia" })
                                    @Html.ValidationMessageFor(d => d.nombreMateria, null, new { @class = "validacion" })
                                </div>
                                <div class="contenedor_interior_right">
                                    @Html.LabelFor(d => d.idUsuario)
                                    @Html.TextBoxFor(d => d.idUsuario, "", new { @class = "input-text", @placeholder = "Nombre materia" })
                                    @Html.ValidationMessageFor(d => d.idUsuario, null, new { @class = "validacion" })
                                </div>
                            </div>
                        </div>
                        <div class="contenedor_botones">
                            <button type="submit" class="btn_format btn_enviar contenedor_interior_left"
                                    onclick="return ConfirmMateria()">
                                Actualizar
                            </button>
                            <a class="btn_format btn_cancelar contenedor_interior_right" href="@Url.Action("Materias", "Admin")">Cancelar</a>
                        </div>
                    </form>
                }
            </div>
            
        </div>

    </section>
    
</body>
</html>

<script src="~/Scripts/configuraciones.js"></script>

<!--Ion Icons-->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>