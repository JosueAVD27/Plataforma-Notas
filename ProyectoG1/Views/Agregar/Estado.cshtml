@model ProyectoG1.Models.ViewModel.EstadoViewModel
@{
    ViewBag.Title = "Agregar Estado";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FAVICON-->
    <link rel="icon" type="image/png" href="~/Imagenes/FavIcon.png">
    <!--ESTILOS-->
    <link rel="stylesheet" type="text/css" href="~/Content/base.css">
    <link rel="stylesheet" type="text/css" href="~/Content/permisos.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    @{
        var nombreuser = Session["nombre"];
        var apellidouser = Session["apellido"];
        var tipouser = Session["tipo"];
        var iduser = Session["id"];

    }

    <!-- Contenido -->
    <section id="contenedor">

        <h3 class="text_usuario">Agregar nuevo estado</h3>

        <div class="contenedor">
            @using (Html.BeginForm("Estado", "Agregar", FormMethod.Post))
            {
                <form>

                    <div class="contenedor_form">
                        <div class="contenedor_interior">

                            <div class="contenedor_interior_right">
                                @Html.LabelFor(d => d.estado)
                                @Html.TextBoxFor(d => d.estado, "", new { @class = "input-text", @placeholder = "Ingrese el nuevo permiso" })
                                @Html.ValidationMessageFor(d => d.estado, null, new { @class = "validacion" })
                            </div>
                        </div>
                    </div>
                    <div class="contenedor_botones">
                        <button type="submit" class="btn_format btn_enviar contenedor_interior_left" onclick="return ConfirmPerm()">Guardar</button>
                        <a class="btn_format btn_cancelar contenedor_interior_right" href="@Url.Action("Estados", "Admin")">Cancelar</a>
                    </div>
                </form>
            }
        </div>

    </section>

</body>
</html>

<script src="~/Scripts/configuraciones.js"></script>

<!--Ion Icons-->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>